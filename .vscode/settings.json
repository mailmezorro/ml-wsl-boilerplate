{
    // ==========================================================================
    // TERMINAL CONFIGURATION
    // ==========================================================================
    // Ensures that the terminal uses the Zsh shell in WSL
    "terminal.integrated.profiles.linux": {
        "Zsh (Default)": {
            "path": "zsh"
        }
    },
    // Sets this profile as the default
    "terminal.integrated.defaultProfile.linux": "Zsh (Default)",

    // ==========================================================================
    // PYTHON CONFIGURATION
    // ==========================================================================
    // Python interpreter (will be auto-detected to conda env)
    "python.defaultInterpreterPath": "",

    // Linting and formatting
    "python.linting.enabled": false,
    "python.linting.ruffEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,

    // Formatting with Ruff
    "python.formatting.provider": "none",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },

    // Testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],

    // Type checking
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": ["./src"],

    // ==========================================================================
    // JUPYTER CONFIGURATION
    // ==========================================================================
    // Jupyter notebook settings
    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.runStartupCommands": [
        "%load_ext autoreload",
        "%autoreload 2",
        "import sys; sys.path.append('./src')"
    ],

    // ==========================================================================
    // EDITOR CONFIGURATION
    // ==========================================================================
    // General editor settings
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // Code actions and suggestions
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },

    // ==========================================================================
    // FILE ASSOCIATIONS
    // ==========================================================================
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "Makefile": "makefile",
        "*.toml": "toml"
    },

    // ==========================================================================
    // EXTENSIONS CONFIGURATION
    // ==========================================================================
    // Ruff configuration
    "ruff.args": ["--config=pyproject.toml"],
    "ruff.fixAll": true,
    "ruff.organizeImports": true,

    // GitLens configuration
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,

    // File explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // ==========================================================================
    // WORKSPACE SPECIFIC
    // ==========================================================================
    // Hide unnecessary files from explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/.coverage": true,
        "**/*.egg-info": true,
        "**/mlruns": false,
        "**/logs": false
    },

    // Search configuration
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/htmlcov": true,
        "**/.pytest_cache": true
    },

    // ==========================================================================
    // DEBUGGING CONFIGURATION
    // ==========================================================================
    // Debug console
    "debug.console.fontSize": 14,
    "debug.console.wordWrap": true,
    "debug.inlineValues": "auto",

    // ==========================================================================
    // PERFORMANCE SETTINGS
    // ==========================================================================
    // Improve performance for large codebases
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.autoSearchPaths": true,
    "typescript.surveys.enabled": false,

    // ==========================================================================
    // APPEARANCE
    // ==========================================================================
    // Font and appearance
    "editor.fontSize": 13,
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 12,

    // Minimap
    "editor.minimap.enabled": true,
    "editor.minimap.size": "fit",
    "editor.minimap.showSlider": "always",

    // ==========================================================================
    // GIT CONFIGURATION
    // ==========================================================================
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.postCommitCommand": "none",

    // ==========================================================================
    // INTELLISENSE & AUTOCOMPLETE
    // ==========================================================================
    "editor.suggest.insertMode": "replace",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.wordBasedSuggestions": "matchingDocuments",

    // ==========================================================================
    // BRACKET PAIR COLORIZATION
    // ==========================================================================
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",

    // ==========================================================================
    // DATA SCIENCE SPECIFIC
    // ==========================================================================
    // CSV/Excel viewer
    "csv-preview.resizeColumns": "all",
    "csv-preview.numberFormat": "en-US",

    // JSON formatting
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // YAML formatting
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    }
}
